{
    "use": [
        "postcss-import",
        "stylelint",
        "postcss-mixins",
        "postcss-cssnext",
        "colorguard",
        "postcss-quantity-queries",
        "postcss-bem",
        "postcss-nested",
        "lost",
        "postcss-responsive-type",
        "postcss-short",

        "stylehacks",
        "postcss-discard-comments",
        "css-mqpacker",
        "cssnano"
    ],
    "postcss-cssnext": {
        "browsers": "> 5%",
        "compress": false,
        "warnForDuplicates": false
    },
    "postcss-bem-linter": {
        "preset": "bem"
    },
    "postcss-bem": {
        "style": "bem",
        "shortcuts": {
            "component": "b",
            "descendent": "e",
            "modifier": "m"
        }
    },
    "postcss-short": {
        "font-size": {
            "disable": true
        }
    },
    "colorguard": {
        "ignore": ["#000000", "#ffffff", "#212121", "#b3b3b3"]
    },
    "stylehacks": {
        "browsers": "> 5%"
    },
    "cssnano": {
        "colormin": false
    }
}
