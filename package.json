{
  "name": "redesign",
  "version": "1.0.0",
  "description": "Holds required configs for build.",
  "repository": {
    "type": "git",
    "url": "git@github.com:dikmax/dikmax.name-ng.git"
  },
  "dependencies": {
    "d3": "^3.5.17",
    "google-closure-library": "^20180204.0.0",
    "greiner-hormann": "^1.3.1",
    "intersection-observer": "^0.5.0",
    "leaflet": "^0.7.7",
    "leaflet-easybutton": "^1.3.1",
    "proj4": "^2.3.15",
    "proj4leaflet": "^0.7.2",
    "topojson": "^1.6.26"
  },
  "devDependencies": {
    "colorguard": "^1.2.0",
    "css-mqpacker": "^5.0.1",
    "cssnano": "^3.7.4",
    "eslint": "^3.4.0",
    "eslint-config-airbnb-base": "^11.0.1",
    "eslint-plugin-import": "^2.2.0",
    "google-closure-compiler": "^20180204.0.0",
    "json": "^9.0.6",
    "lost": "^7.1.0",
    "postcss": "~5.0.0",
    "postcss-bem": "^0.4.1",
    "postcss-bem-linter": "^2.5.1",
    "postcss-cli": "^2.6.0",
    "postcss-cssnext": "^2.7.0",
    "postcss-discard-comments": "^2.0.4",
    "postcss-import": "^8.1.2",
    "postcss-mixins": "^5.0.1",
    "postcss-nested": "^1.0.0",
    "postcss-quantity-queries": "^0.4.0",
    "postcss-reporter": "^1.4.1",
    "postcss-responsive-type": "^0.3.3",
    "postcss-short": "^1.4.0",
    "stylehacks": "^2.3.1",
    "stylelint": "^7.2.0",
    "stylelint-config-standard": "^13.0.0"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "node_modules/.bin/stylelint styles/*.pcss"
  },
  "author": "Maxim Dikun",
  "license": "BSD-3-Clause",
  "remarkConfig": {
    "plugins": {
      "lint": {
        "maximum-line-length": 120,
        "no-consecutive-blank-lines": false,
        "no-html": false,
        "no-missing-blank-lines": false,
        "no-multiple-toplevel-headings": false,
        "ordered-list-marker-value": false
      }
    },
    "settings": {
      "footnotes": true
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "at-rule-empty-line-before": null,
      "block-no-empty": null,
      "color-hex-length": "long",
      "comment-empty-line-before": null,
      "declaration-colon-newline-after": null,
      "property-no-unknown": null,
      "custom-property-empty-line-before": null,
      "indentation": [
        4,
        {
          "ignore": [
            "value"
          ]
        }
      ],
      "max-empty-lines": null,
      "rule-non-nested-empty-line-before": null
    }
  },
  "eslintConfig": {
    "globals": {
      "dikmax": false,
      "goog": false
    },
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": "airbnb-base",
    "rules": {
      "comma-dangle": 0,
      "dot-notation": 0,
      "func-names": 0,
      "no-restricted-syntax": [
        2,
        "DebuggerStatement",
        "LabeledStatement",
        "WithStatement"
      ],
      "no-underscore-dangle": 0,
      "object-curly-spacing": [
        2,
        "never"
      ],
      "object-shorthand": 0,
      "quote-props": 0
    }
  }
}
