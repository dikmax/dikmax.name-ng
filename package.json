{
  "name": "redesign",
  "version": "1.0.0",
  "description": "Holds required configs for build.",
  "repository": {
    "type": "git",
    "url": "git@github.com:dikmax/dikmax.name-ng.git"
  },
  "dependencies": {
    "d3": "^6.7.0",
    "d3-geo-projection": "^3.0.0",
    "google-closure-library": "^20210406.0.0",
    "greiner-hormann": "^1.4.1",
    "intersection-observer": "^0.12.0",
    "leaflet": "~1.6.0",
    "leaflet-easybutton": "^2.4.0",
    "ndjson-cli": "^0.3.1",
    "proj4": "^2.7.2",
    "proj4leaflet": "^1.0.2",
    "shapefile": "^0.6.6",
    "topojson": "^3.0.2"
  },
  "devDependencies": {
    "colorguard": "^1.2.1",
    "cssnano": "^5.0.8",
    "eslint": "^7.26.0",
    "eslint-config-airbnb-base": "^14.2.1",
    "eslint-plugin-import": "^2.23.0",
    "google-closure-compiler": "^20210505.0.0",
    "json": "^11.0.0",
    "postcss": "^8.3.8",
    "postcss-cli": "^9.0.0",
    "postcss-color-mod-function": "^3.0.3",
    "postcss-custom-media": "^8.0.0",
    "postcss-custom-properties": "^12.0.0",
    "postcss-discard-comments": "^5.0.0",
    "postcss-import": "^14.0.2",
    "postcss-mixins": "^8.1.0",
    "postcss-nested": "^5.0.6",
    "postcss-preset-env": "^6.7.0",
    "postcss-quantity-queries": "^0.5.0",
    "postcss-reporter": "^7.0.3",
    "postcss-responsive-type": "^1.0.0",
    "postcss-short": "^5.0.0",
    "stylehacks": "^5.0.0",
    "stylelint": "^13.13.1",
    "stylelint-config-standard": "^22.0.0",
    "uglify-js": "^3.13.6"
  },
  "scripts": {
    "stylelint": "stylelint styles/*.pcss",
    "eslint": "eslint scripts"
  },
  "author": "Maxim Dikun",
  "license": "BSD-3-Clause",
  "remarkConfig": {
    "plugins": {
      "lint": {
        "maximum-line-length": 120,
        "no-consecutive-blank-lines": false,
        "no-html": false,
        "no-missing-blank-lines": false,
        "no-multiple-toplevel-headings": false,
        "ordered-list-marker-value": false
      }
    },
    "settings": {
      "footnotes": true
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "define-mixin",
            "mixin"
          ]
        }
      ],
      "at-rule-empty-line-before": null,
      "block-no-empty": null,
      "color-hex-length": "long",
      "comment-empty-line-before": null,
      "declaration-colon-newline-after": null,
      "property-no-unknown": null,
      "custom-property-empty-line-before": null,
      "indentation": [
        4,
        {
          "ignore": [
            "value"
          ]
        }
      ],
      "max-empty-lines": [
        2
      ]
    }
  },
  "eslintConfig": {
    "globals": {
      "dikmax": false,
      "goog": false
    },
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": "airbnb-base",
    "rules": {
      "comma-dangle": 0,
      "dot-notation": 0,
      "func-names": 0,
      "no-restricted-syntax": [
        2,
        "DebuggerStatement",
        "LabeledStatement",
        "WithStatement"
      ],
      "no-underscore-dangle": 0,
      "object-curly-spacing": [
        2,
        "never"
      ],
      "object-shorthand": 0,
      "quote-props": 0
    }
  }
}
