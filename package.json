{
  "name": "redesign",
  "version": "1.0.0",
  "description": "Holds required configs for build.",
  "repository": {
    "type": "git",
    "url": "git@github.com:dikmax/dikmax.name-ng.git"
  },
  "dependencies": {
    "d3": "^5.5.0",
    "d3-geo-projection": "^2.4.0",
    "google-closure-library": "^20180506.0.0",
    "greiner-hormann": "^1.3.4",
    "intersection-observer": "^0.5.0",
    "leaflet": "^1.3.1",
    "leaflet-easybutton": "^2.3.0",
    "ndjson-cli": "^0.3.1",
    "proj4": "^2.4.4",
    "proj4leaflet": "^1.0.2",
    "shapefile": "^0.6.6",
    "topojson": "^3.0.2"
  },
  "devDependencies": {
    "colorguard": "^1.2.1",
    "css-mqpacker": "^6.0.2",
    "cssnano": "^4.0.0-rc.2",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^13.0.0",
    "eslint-plugin-import": "^2.12.0",
    "google-closure-compiler": "^20180610.0.2",
    "json": "^9.0.6",
    "lost": "^8.3.0",
    "postcss": "^6.0.23",
    "postcss-cli": "^5.0.1",
    "postcss-color-function": "^4.0.1",
    "postcss-custom-media": "^6.0.0",
    "postcss-discard-comments": "^2.0.4",
    "postcss-import": "^11.1.0",
    "postcss-mixins": "^6.2.0",
    "postcss-nested": "^3.0.0",
    "postcss-preset-env": "^5.1.0",
    "postcss-quantity-queries": "^0.5.0",
    "postcss-reporter": "^5.0.0",
    "postcss-responsive-type": "^1.0.0",
    "postcss-short": "^4.1.0",
    "stylehacks": "^2.3.2",
    "stylelint": "^9.3.0",
    "stylelint-config-standard": "^18.2.0",
    "uglify-js": "^3.4.1"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "lint": "stylelint styles/*.pcss",
    "eslint": "eslint scripts"
  },
  "author": "Maxim Dikun",
  "license": "BSD-3-Clause",
  "remarkConfig": {
    "plugins": {
      "lint": {
        "maximum-line-length": 120,
        "no-consecutive-blank-lines": false,
        "no-html": false,
        "no-missing-blank-lines": false,
        "no-multiple-toplevel-headings": false,
        "ordered-list-marker-value": false
      }
    },
    "settings": {
      "footnotes": true
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "define-mixin",
            "mixin"
          ]
        }
      ],
      "at-rule-empty-line-before": null,
      "block-no-empty": null,
      "color-hex-length": "long",
      "comment-empty-line-before": null,
      "declaration-colon-newline-after": null,
      "property-no-unknown": null,
      "custom-property-empty-line-before": null,
      "indentation": [
        4,
        {
          "ignore": [
            "value"
          ]
        }
      ],
      "max-empty-lines": [
        2
      ]
    }
  },
  "eslintConfig": {
    "globals": {
      "dikmax": false,
      "goog": false
    },
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": "airbnb-base",
    "rules": {
      "comma-dangle": 0,
      "dot-notation": 0,
      "func-names": 0,
      "no-restricted-syntax": [
        2,
        "DebuggerStatement",
        "LabeledStatement",
        "WithStatement"
      ],
      "no-underscore-dangle": 0,
      "object-curly-spacing": [
        2,
        "never"
      ],
      "object-shorthand": 0,
      "quote-props": 0
    }
  }
}
