{
  "name": "redesign",
  "version": "1.0.0",
  "description": "Holds required configs for build.",
  "repository": {
    "type": "git",
    "url": "git@github.com:dikmax/dikmax.name-ng.git"
  },
  "dependencies": {
    "d3": "^7.6.1",
    "d3-geo-projection": "^4.0.0",
    "google-closure-library": "^20220502.0.0",
    "greiner-hormann": "^1.4.2",
    "intersection-observer": "^0.12.2",
    "leaflet": "~1.8.0",
    "leaflet-easybutton": "^2.4.0",
    "ndjson-cli": "^0.3.1",
    "proj4": "^2.8.0",
    "proj4leaflet": "^1.0.2",
    "shapefile": "^0.6.6",
    "topojson": "^3.0.2"
  },
  "devDependencies": {
    "colorguard": "^1.2.1",
    "cssnano": "^5.1.12",
    "cssnano-preset-advanced": "^5.3.8",
    "eslint": "^8.21.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-plugin-import": "^2.26.0",
    "google-closure-compiler": "^20220719.0.0",
    "json": "^11.0.0",
    "postcss": "^8.4.14",
    "postcss-cli": "^10.0.0",
    "postcss-color-mod-function": "^3.0.3",
    "postcss-custom-media": "^8.0.2",
    "postcss-custom-properties": "^12.1.8",
    "postcss-discard-comments": "^5.1.2",
    "postcss-import": "^14.1.0",
    "postcss-mixins": "^9.0.3",
    "postcss-nested": "^5.0.6",
    "postcss-preset-env": "^7.7.2",
    "postcss-quantity-queries": "^0.5.0",
    "postcss-reporter": "^7.0.5",
    "postcss-responsive-type": "^1.0.0",
    "postcss-short": "^5.0.0",
    "stylehacks": "^5.1.0",
    "stylelint": "^14.9.1",
    "stylelint-config-standard": "^26.0.0",
    "uglify-js": "^3.16.3"
  },
  "scripts": {
    "postcss": "postcss -c postcss.config.js styles/styles.pcss",
    "stylelint": "stylelint styles/*.pcss",
    "eslint": "eslint scripts"
  },
  "author": "Maxim Dikun",
  "license": "BSD-3-Clause",
  "remarkConfig": {
    "plugins": {
      "lint": {
        "maximum-line-length": 120,
        "no-consecutive-blank-lines": false,
        "no-html": false,
        "no-missing-blank-lines": false,
        "no-multiple-toplevel-headings": false,
        "ordered-list-marker-value": false
      }
    },
    "settings": {
      "footnotes": true
    }
  },
  "stylelint": {
    "extends": "stylelint-config-standard",
    "rules": {
      "at-rule-no-unknown": [
        true,
        {
          "ignoreAtRules": [
            "define-mixin",
            "mixin"
          ]
        }
      ],
      "at-rule-empty-line-before": null,
      "block-no-empty": null,
      "color-hex-length": "long",
      "comment-empty-line-before": null,
      "declaration-colon-newline-after": null,
      "property-no-unknown": null,
      "custom-property-empty-line-before": null,
      "indentation": [
        4,
        {
          "ignore": [
            "value"
          ]
        }
      ],
      "max-empty-lines": [
        2
      ]
    }
  },
  "eslintConfig": {
    "globals": {
      "dikmax": false,
      "goog": false
    },
    "env": {
      "browser": true,
      "es6": true
    },
    "extends": "airbnb-base",
    "rules": {
      "comma-dangle": 0,
      "dot-notation": 0,
      "func-names": 0,
      "no-restricted-syntax": [
        2,
        "DebuggerStatement",
        "LabeledStatement",
        "WithStatement"
      ],
      "no-underscore-dangle": 0,
      "object-curly-spacing": [
        2,
        "never"
      ],
      "object-shorthand": 0,
      "quote-props": 0
    }
  }
}
