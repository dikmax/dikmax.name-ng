/** @define archive */
.archive {

    &__list {
        padding: 0;
    }

    &__subheader {
        align-items: center;
        border-top: 1px solid color(var(--black-color) a(0.12));
        color: var(--primary-color);
        display: flex;
        font-size: smaller;
        height: 48px;
        margin-left: 56px;
    }

    &__item {
        align-items: center;
        color: var(--light-background-text);
        display: flex;
        height: 72px;
        text-decoration: none;
    }

    &__item-icon {
        background-color: var(--accent-color);
        border-radius: 50%;
        box-sizing: border-box;
        color: white;
        margin-right: 16px;
        min-size: 40px;
        size: 40px;

        & svg {
            fill: var(--white-color);
            position: relative 4px * * 4px;
            size: 32px;
        }

        &_none {
            background: none;
        }
    }

    &__item-text {
    }
}
